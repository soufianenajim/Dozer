<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping map-id="EMPLOYEE_COMPTE" map-empty-string="false"
		map-null="false" wildcard="false">
		<class-a>com.example.demo.model.Employee</class-a>
		<class-b>com.example.demo.DTO.EmployeeDTO</class-b>

		<field>
			<a>id</a>
			<b>id</b>
		</field>
		<field>
			<a>firstName</a>
			<b>firstName</b>
		</field>
		<field>
			<a>lastName</a>
			<b>lastName</b>
		</field>
	</mapping>
	<mapping map-id="EMPLOYEE" map-empty-string="false" map-null="false"
		wildcard="false">
		<class-a>com.example.demo.model.Employee</class-a>
		<class-b>com.example.demo.DTO.EmployeeDTO</class-b>
		<field>
			<a>id</a>
			<b>id</b>
		</field>

		<field>
			<a>firstName</a>
			<b>firstName</b>
		</field>


		<field>
			<a>lastName</a>
			<b>lastName</b>
		</field>
		<field map-id="COMPTE_EMPLOYE">
			<a>comptes</a>
			<b>comptes</b>
		</field>
	</mapping>



</mappings> 
      